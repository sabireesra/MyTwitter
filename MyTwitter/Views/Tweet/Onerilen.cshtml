@using MyTwitter.Models
@model IEnumerable<User>
@{

    Layout = null;
}


<div class="panel panel-default panel-custom">
    <div class="panel-heading">
        <h3 class="panel-title">
            Who to follow
            <small><a href="#">Refresh</a> ● <a href="#">View all</a></small>
        </h3>
    </div>
    <div class="panel-body">


        @foreach (var item in Model)
        {
            <div class="media">
                <div class="media-left">
                    <img src="http://placehold.it/32x32" alt="" class="media-object img-rounded">
                </div>
                <div class="media-body">
                    <form action="/Tweet/Follow" method="Post">
                        <h4 name="Name" class="media-heading">@item.UserName</h4>

                        <a href="/Tweet/Follow/@item.Id" class="btn btn-default btn-xs">
                            +
                            <span class="glyphicon glyphicon-user"></span>

                            Follow
                        </a>
                    </form>
                </div>
            </div>
        }



    </div>
    <div class="panel-footer">
        <a href="www.google.it">
            <span class="glyphicon glyphicon-user"></span>
            Find people you know
        </a>
    </div>
</div>
